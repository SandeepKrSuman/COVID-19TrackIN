  <section class="country-graph">
    <div class="container-fluid">
      <canvas class="chart1" id="myChart"></canvas>
      <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var chart = new Chart(ctx, {

          type: 'polarArea',

          data: {
            labels: ['Total Cases', 'Active Cases', 'Recovered', 'Deaths'],
            datasets: [{

              data: [ <%= covidData.statewise[0].confirmed %> , <%= covidData.statewise[0].active %> , <%= covidData.statewise[0].recovered %> , <%= covidData.statewise[0].deaths %> ],
              backgroundColor: ['rgb(255,0,0,0.8)',
                'rgba(54,165,235,1.0)',
                'rgba(0,255,0,1.0)',
                'rgba(0,0,0,1.0)'
              ]
            }]
          },

          options: {
            responsive: true,
            legend: {
              position: 'right',
            },
            title: {
              display: true,
              text: 'COVID-19 Cases in INDIA'
            },
            scale: {
              ticks: {
                beginAtZero: true
              },
              reverse: false
            },
            animation: {
              animateRotate: false,
              animateScale: true
            }
          }
        });
      </script>
    </div>
  </section>

  <section id="state-data">
    <div class="container-fluid">


      <table class="table table-color table-borderless table-striped">
        <thead class="thead-dark">
          <tr>
            <th class="state-name" style="padding-left:50px;">State/UT</th>
            <th>Confirmed</th>
            <th>Active</th>
            <th>Recovered</th>
            <th>Deaths</th>
          </tr>
        </thead>
        <tbody>

          <tr>
            <td colspan="5"><i>(Click on State/UT name to view district-wise data.)</i></td>
          </tr>

          <%var max = parseInt(covidData.statewise[1].confirmed);%>
          <%var pos = 1;%>
          <%for(var i = 1; i < covidData.statewise.length; i++){%>
          <%if(parseInt(covidData.statewise[i].confirmed) > max){%>
          <%max=parseInt(covidData.statewise[i].confirmed);%>
          <%pos=i;%>
          <%}%>
          <tr data-toggle="modal" data-target="#<%= covidData.statewise[i].statecode %>" class="district-target">
          <td class="state-name"><i class="fas fa-angle-right"></i><span class="tspan"><%= covidData.statewise[i].state %></span></td>
          <td><span class="tspan"> <%if(parseInt(covidData.statewise[i].deltaconfirmed) > 0){%>
            <span class="delta-text-cnf"><i class="fas fa-arrow-up"></i><%=covidData.statewise[i].deltaconfirmed%></span>
          <%}%>
          <%= covidData.statewise[i].confirmed %></span></td>

          <td><span class="tspan"><%= covidData.statewise[i].active %></span></td>

          <td><span class="tspan"> <%if(parseInt(covidData.statewise[i].deltarecovered) > 0){%>
            <span class="delta-text-rec"><i class="fas fa-arrow-up"></i><%=covidData.statewise[i].deltarecovered%></span>
            <%}%>
            <%= covidData.statewise[i].recovered %></span></td>

          <td><span class="tspan"> <%if(parseInt(covidData.statewise[i].deltadeaths) > 0){%>
            <span class="delta-text-death"><i class="fas fa-arrow-up"></i><%=covidData.statewise[i].deltadeaths%></span>
            <%}%>
            <%= covidData.statewise[i].deaths %></span></td>
          </tr>
          <%}%>

        </tbody>
      </table>

      <%for(var j = 0; j < disCovidData.length; j++){%>

