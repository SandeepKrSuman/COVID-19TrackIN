           <div class="modal-header">
             <h5 class="modal-title dis-modal-title" id="exampleModalLongTitle"><%= disCovidData[j].state %></h5>
             <button type="button" class="close" data-dismiss="modal" aria-label="Close">
               <span aria-hidden="true">&times;</span>
             </button>
           </div>
           <div class="modal-body">
             <div class="mdl-bdy">
               <%var lupdt, cnfr, actv, deat, recvr, statenote;%>
               <%for(var k = 0; k < covidData.statewise.length; k++){%>
                 <%if(disCovidData[j].statecode === covidData.statewise[k].statecode){%>
                   <%lupdt = covidData.statewise[k].lastupdatedtime;%>
                   <%statenote = covidData.statewise[k].statenotes;%>
                   <%cnfr = covidData.statewise[k].confirmed%>
                   <%actv = covidData.statewise[k].active%>
                   <%deat = covidData.statewise[k].deaths%>
                   <%recvr = covidData.statewise[k].recovered %>
                 <%}%>
               <%}%>

               <canvas class="chart2" id="districtChart<%=j%>"></canvas>
               <script>
               var ctx = document.getElementById('districtChart<%=j%>').getContext('2d');
         var chart = new Chart(ctx, {

           type: 'bar',

           data: {

               labels: ['Total Cases', 'Active Cases', 'Recovered', 'Deaths'],
               datasets: [{
                   label: '',
                   data: [<%= cnfr %>, <%= actv %>, <%= recvr %>, <%= deat %>],
                   backgroundColor: ['rgb(255,0,0,0.9)',
                   'rgba(54,165,235,1.0)',
                   'rgba(0,255,0,1.0)',
                   'rgba(0,0,0,1.0)']
                   }]
                   },

                   options: {
                     tooltips: {
                   titleFontSize: 18,
                   bodyFontSize: 20
                     },
                   responsive: true,
                   legend: {
                     display: false
                   },
                   title: {
                   display: true,
                   text: 'COVID situation in <%= disCovidData[j].state %>'
                   },
                   scales: {
                     xAxes: [{
                       gridLines: {
                         display : true,
                         zeroLineWidth : 1,
                         lineWidth : 0
                       }
                     }],
                     yAxes: [{
                       gridLines: {
                         display : true,
                         zeroLineWidth : 1,
                         lineWidth : 0
                       }
                     }]
                   },

                   animation: {
                   animateRotate: false,
                   animateScale: true
                   }
                   }
                   });
                   </script>

                   <div class="last-updated" style="color: #000;">
                     Last Updated : <%= lupdt %>
                   </div>
                   <%if(statenote.length > 0){%>
                   <div class="last-updated state-note" style="color: #000;">
                     <i class="far fa-clipboard" style="font-size: 2rem;"></i>   <%= statenote %>
                   </div>
                   <%}%>

                   <table class="table table-borderless table-striped" style="margin-top: 10%;">
                     <thead class="thead-dark">
                       <tr>
                         <th class="state-name" style="padding-left:50px;">District</th>
                         <th>Confirmed</th>
                         <th>Active</th>
                         <th>Recovered</th>
                         <th>Deaths</th>
                       </tr>
                     </thead>
                     <tbody style="color: #000;">

                         <%for(var y = 0; y < disCovidData[j].districtData.length; y++){%>
                           <tr>
                             <td class="state-name"><%= disCovidData[j].districtData[y].district %></td>

                             <td> <%if(parseInt(disCovidData[j].districtData[y].delta.confirmed) > 0){%>
                               <span class="delta-text-cnf" style="color: red;"><i class="fas fa-arrow-up"></i><%= disCovidData[j].districtData[y].delta.confirmed %></span>
                             <%}%>
                               <%= disCovidData[j].districtData[y].confirmed %>
                             </td>

                             <td><%= disCovidData[j].districtData[y].active %></td>

                             <td> <%if(parseInt(disCovidData[j].districtData[y].delta.recovered) > 0){%>
                               <span class="delta-text-rec" style="color: #79d70f;"><i class="fas fa-arrow-up"></i><%= disCovidData[j].districtData[y].delta.recovered %></span>
                             <%}%>
                               <%= disCovidData[j].districtData[y].recovered %>
                             </td>

                             <td> <%if(parseInt(disCovidData[j].districtData[y].delta.deceased) > 0){%>
                               <span class="delta-text-death" style="color: #393e46;"><i class="fas fa-arrow-up"></i><%= disCovidData[j].districtData[y].delta.deceased %></span>
                             <%}%>
                               <%= disCovidData[j].districtData[y].deceased %>
                             </td>
                           </tr>
                         <%}%>

                     </tbody>
                   </table>

             </div>
           </div>
           <div class="modal-footer">
             <button type="button" class="btn btn-secondary btn-lg modal-close-btn" data-dismiss="modal">Close</button>
           </div>
         </div>
       </div>
       </div>
       <%}%>

    </div>

  </section>


