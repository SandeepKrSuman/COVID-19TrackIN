  <section class="country-graph">
    <div class="container-fluid">
      <canvas class="chart1" id="myChart"></canvas>
      <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var chart = new Chart(ctx, {

          type: 'polarArea',

          data: {
            labels: ['Total Cases', 'Active Cases', 'Recovered', 'Deaths'],
            datasets: [{

              data: [ <%= covidData.totals.total %> , <%= covidData.totals.cases %> , <%= covidData.totals.recoveries %> , <%= covidData.totals.deaths %> ],
              backgroundColor: ['rgb(255,0,0,0.8)',
                'rgba(54,165,235,1.0)',
                'rgba(0,255,0,1.0)',
                'rgba(0,0,0,1.0)'
              ]
            }]
          },

          options: {
            responsive: true,
            legend: {
              position: 'right',
            },
            title: {
              display: true,
              text: 'COVID-19 Cases in INDIA'
            },
            scale: {
              ticks: {
                beginAtZero: true
              },
              reverse: false
            },
            animation: {
              animateRotate: false,
              animateScale: true
            }
          }
        });
      </script>
    </div>
  </section>

  <section id="state-data">
    <div class="container-fluid">

      <table class="table table-color">
        <thead class="thead-dark">
          <tr>
            <th scope="col">State/UT</th>
            <th scope="col">Confirmed</th>
            <th scope="col">Active</th>
            <th scope="col">Recovered</th>
            <th scope="col">Deaths</th>
          </tr>
        </thead>
        <tbody>

          <%var max = covidData.states[0].total;%>
          <%var pos = 0;%>
          <%for(var i = 0; i < covidData.states.length; i++){%>
          <%if(covidData.states[i].total > max){%>
          <%max=covidData.states[i].total;%>
          <%pos=i;%>
          <%}%>
          <tr>
            <td class="state-name"><%= covidData.states[i].state %></td>
          <td><%= covidData.states[i].total %></td>
          <td><%= covidData.states[i].cases %></td>
          <td><%= covidData.states[i].recoveries %></td>
          <td><%= covidData.states[i].deaths %></td>
          </tr>
          <%}%>

          <tr>
            <td colspan="5">*States wise distribution is subject to further verification and reconciliation</td>
          </tr>
          <!-- <tr>
            <td colspan="5">#One case of Jharkhand reassigned to Bihar after reconciliation</td>
          </tr> -->
        </tbody>
      </table>

    </div>

  </section>

