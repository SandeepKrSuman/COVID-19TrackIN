                   'rgba(0,255,0,1.0)',
                   'rgba(0,0,0,1.0)']
                   }]
                   },

                   options: {
                   responsive: true,
                   title: {
                   display: true,
                   text: 'COVID situation in <%= disCovidData[j].state %>'
                   },

                   animation: {
                   animateRotate: false,
                   animateScale: true
                   }
                   }
                   });
                   </script>

                   <div class="last-updated" style="color: #000;">
                     Last Updated : <%= covidData.statewise[0].lastupdatedtime %>
                   </div>

                   <table class="table table-borderless table-striped" style="margin-top: 10%;">
                     <thead class="thead-dark">
                       <tr>
                         <th class="state-name" style="padding-left:50px;">District</th>
                         <th>Confirmed</th>
                         <th>Active</th>
                         <th>Recovered</th>
                         <th>Deaths</th>
                       </tr>
                     </thead>
                     <tbody style="color: #000;">

                         <%for(var y = 0; y < disCovidData[j].districtData.length; y++){%>
                           <tr>
                             <td class="state-name"><%= disCovidData[j].districtData[y].district %></td>

                             <td> <%if(parseInt(disCovidData[j].districtData[y].delta.confirmed) > 0){%>
                               <span class="delta-text-cnf" style="color: red;"><i class="fas fa-arrow-up"></i><%= disCovidData[j].districtData[y].delta.confirmed %></span>
                             <%}%>
                               <%= disCovidData[j].districtData[y].confirmed %>
                             </td>

                             <td><%= disCovidData[j].districtData[y].active %></td>

                             <td> <%if(parseInt(disCovidData[j].districtData[y].delta.recovered) > 0){%>
                               <span class="delta-text-rec" style="color: rgba(0,255,0,1.0);"><i class="fas fa-arrow-up"></i><%= disCovidData[j].districtData[y].delta.recovered %></span>
                             <%}%>
                               <%= disCovidData[j].districtData[y].recovered %>
                             </td>

                             <td> <%if(parseInt(disCovidData[j].districtData[y].delta.deceased) > 0){%>
                               <span class="delta-text-death" style="color: #393e46;"><i class="fas fa-arrow-up"></i><%= disCovidData[j].districtData[y].delta.deceased %></span>
                             <%}%>
                               <%= disCovidData[j].districtData[y].deceased %>
                             </td>
                           </tr>
                         <%}%>

                     </tbody>
                   </table>

             </div>
           </div>
           <div class="modal-footer">
             <button type="button" class="btn btn-secondary btn-lg modal-close-btn" data-dismiss="modal">Close</button>
           </div>
         </div>
       </div>
       </div>
       <%}%>

    </div>

  </section>

